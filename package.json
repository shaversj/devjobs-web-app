{
  "name": "devjobs-web-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "drizzle-kit push:sqlite --config drizzle.config.js",
    "db:generate": "drizzle-kit generate:sqlite --config drizzle.config.js",
    "db:studio": "drizzle-kit studio --host localhost --port 3002 --verbose --config drizzle.config.js",
    "db:seed": "node --import tsx --env-file .env ./seed/insert.js",
    "db:delete": "node --import tsx --env-file .env ./seed/delete.js"
  },
  "dependencies": {
    "better-sqlite3": "^9.5.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.8",
    "next": "14.2.1",
    "react": "^18",
    "react-dom": "^18",
    "tsx": "^4.7.2",
    "use-debounce": "^10.0.0"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.16",
    "eslint": "^8",
    "eslint-config-next": "14.2.1",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "tailwindcss": "^3.4.1"
  }
}
